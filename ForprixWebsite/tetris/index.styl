    display flex
    align-items center
    justify-content center
    position fixed
    left 0
    right 0
    top 0
    bottom 0


.welcoming-message
    font-size 32px
    font-family Consolas
    color white

#canvas1
    border-radius 6px

#canvas2
    border-radius 0 8px 8px 0
    background #131313
    padding 12px

.hidden
    visibility hidden
    display none

