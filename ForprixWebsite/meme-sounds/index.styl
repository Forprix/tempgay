@font-face
  font-family 'FiraSansCondensed'
  src url('/assets/fira-sans-condensed.ttf')

@font-face
  font-family 'Saira'
  src url('/assets/Saira.ttf')

@font-face
  font-family 'Roboto'
  src url('/assets/roboto.ttf')

@keyframes fadeAppear
  0%
    opacity 0
  100%
    opacity 1

*
  margin 0
  overflow hidden

body
  border 0
  width 100%
  height 100%
  position absolute

.sound-list
  position absolute
  height auto
  display flex
  flex-direction column
  justify-content center
  cursor grab
  &:active
    cursor grabbing

.sound-list-row
  display flex
  align-items flex-start
  justify-content flex-start
  min-height auto

.sound-list-wrapper
  position absolute
  width 100%
  height 100%

.sound
  transition opacity 0.4s ease-in-out
  animation 0.5s ease-out 0s 1 fadeAppear
  border-radius 12px
  user-select none
  -webkit-user-drag none
  margin 8px
  width 134px
  height 184px
  display flex
  flex-direction column
  background #161616
  position relative
  &.playing
    filter drop-shadow(0 0 3px var(--rainbow))
  &.loaded
    opacity 1
  & > div:nth-child(3)
    pointer-events none
    position absolute
    width 100%
    height 100%
  &.playing > div:nth-child(3)
    box-sizing border-box
    border-radius 12px
    // border solid var(--rainbow) 4px
    border solid var(--rainbow) 3px
    filter drop-shadow(0 0 3px var(--rainbow)) drop-shadow(0 0 8px var(--rainbow))
  & > div:nth-child(1):hover > div:nth-child(1)
    filter grayscale(100%) brightness(30%)
  & > div:nth-child(1)
    position relative
    height 134px
    background #252525
    display flex
    align-items center
    justify-content center
    border-radius 15px
    font-size 42px
    color #161616
    font-family FiraSansCondensed
    font-weight 800
    & > div:nth-child(1)
      filter grayscale(0%) brightness(100%)
      transition filter 0.2s ease-out
      position absolute
      width 100%
      height 100%
      display flex
      align-items center
      justify-content center
      & > div:nth-child(1)
        background-size cover
    & > div:nth-child(2)
      position absolute
      width 100%
      height 100%
      display flex
      align-items center
      justify-content center
  & > div:nth-child(1) > div:nth-child(3)
    transition opacity 0.2s ease-out
    cursor pointer
    position absolute
    width 26px
    height 26px
    bottom 10px
    right 10px
    background url(/assets/link.svg) center center no-repeat
    filter brightness(180%)
    background-size 100% 100%
    opacity 0
  &:hover > div:nth-child(1) > div:nth-child(3)
    opacity 0.4
    &:hover
      opacity 1
  & > div:nth-child(1) > div:nth-child(2) > div:nth-child(1)
    transition opacity 0.2s ease-out
    cursor pointer
    width 58px
    height 58px
    background url(/assets/play.svg) center center no-repeat
    filter brightness(180%)
    background-size 100% 100%
    opacity 0
  &.playing > div:nth-child(1) > div:nth-child(2) > div:nth-child(1)
    background url(/assets/stop.svg) center center no-repeat
    border-radius 8px
  &:hover > div:nth-child(1) > div:nth-child(2) > div:nth-child(1)
    opacity 0.4
    &:hover
      opacity 1
  & > div:nth-child(2)
    flex-grow 1
    display flex
    justify-content center
    align-items center
    color #555555
    font-family FiraSansCondensed
    font-weight 600
    padding 0 10px
    & > div:nth-child(1)
      white-space nowrap
      text-overflow ellipsis
  &.playing > div:nth-child(2)
    // color var(--rainbow)
    color var(--rainbow)
    filter drop-shadow(0 0 3px var(--rainbow))