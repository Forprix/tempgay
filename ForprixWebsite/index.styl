@font-face
  font-family 'Saira'
  src url('./assets/Saira.ttf')

@font-face
  font-family 'Roboto'
  src url('./assets/roboto.ttf')

@font-face
  font-family 'RobotoThin'
  src url('./assets/roboto-thin.ttf')

@keyframes fadeAppear
  0%
    opacity 0
  100%
    opacity 1

*
  margin 0
  font-family Saira

body
  transition: opacity 0.5s ease-in-out;
  animation: 0.5s ease-in-out 0s 1 fadeAppear;
  background #1F1F1F
  position fixed
  width 100%
  height 100%
  display flex
  flex-direction column

body.leaving
  opacity: 0

.background
  background-color orange
  min-height 100%
  min-width 100%
  position absolute
  top 0
  z-index -1
  background url(./background.png) center center no-repeat
  background-size cover

.header
  display flex
  flex-direction row
  align-items center
  background #363636
  height 76px
  min-height 76px

.body
  flex-grow 1
  display flex
  flex-direction column
  justify-content flex-start
  align-items center
  overflow-y auto
  &.loading
    overflow hidden
    & > .body-iframe
      visibility hidden
      display none
    & > .loading-screen
      visibility visible
      display flex


.header-title
  display flex
  font-weight normal
  font-size 24px
  color white
  white-space nowrap
  overflow hidden

.discord-button
  cursor pointer
  background url(./assets/discord.svg) center center no-repeat
  min-width 33px
  width 33px
  height 25px
  padding 10px
  margin-left 22px
  transition all 0.05s ease-out

.search-bar
  margin-left 32px
  margin-right 32px
  display flex
  align-items center
  height 100%
  flex-grow 1

.search-bar-button-wrapper
  background #4D4D4D
  width 57px
  height 47px
  border-radius 0 7px 7px 0

.search-bar-button
  cursor pointer
  background url(./assets/loupe.svg) center center no-repeat
  width 100%
  height 100%
  transition all 0.5s ease-in-out
  &:hover
    transform rotate(360deg)

.search-bar-text
  flex-grow 1
  padding-left 14px
  padding-right 14px
  display flex
  align-items center
  height 47px
  background #1F1F1F
  position relative
  border-radius 7px 0 0 7px

.search-bar-placeholder
  font-family RobotoThin
  letter-spacing 0.75px
  font-weight bold
  color #888888
  white-space nowrap
  overflow hidden

.search-bar-input-wrapper
  display flex
  align-items center
  position absolute
  top 0
  left 0
  bottom 0
  right 0

.search-bar-input
  padding-left 14px
  padding-right 14px
  padding-top 14px
  padding-bottom 14px
  width 100%
  outline none
  font-family RobotoThin
  letter-spacing 0.75px
  font-weight bold
  color white
  white-space nowrap
  overflow hidden

.menu
  position fixed
  display flex
  flex-direction column
  left 0
  height 100%
  width auto
  min-width 415px
  background #2A2A2A
  transition all 0.3s ease-out
  transform translateX(-100%)

.menu-header
  display flex
  flex-direction row-reverse
  align-items center
  height 76px
  min-height 76px
  background #363636

.menu-button-1
  background url(./assets/header-menu.svg) center center no-repeat
  width 34px
  min-width 34px
  height 100%
  padding-left 32px
  padding-right 32px
  
.menu-button-2
  background url(./assets/header-menu.svg) center center no-repeat
  width 34px
  height 100%
  padding-right 64px

.menu-button
  cursor pointer

.open
  box-shadow 5px 0px 12px #00000040
  transform translateX(0%)

.menu-body
  display: flex
  flex-direction: column
  height: 100%

.menu-title
  margin-top 5px
  margin-left 32px
  margin-right 32px
  display flex
  align-items center
  justify-content flex-start
  flex-grow 1
  white-space nowrap
  overflow hidden

.menu-title-text
  display flex
  font-size 24px
  color white

.menu-locations
  width 100%
  flex-grow 1

.menu-bottom
  width 100%

.menu-bottom-text
  color white
  font-size 16px
  margin-bottom 24px
  margin-left 20px
  margin-right 20px

.menu-bottom-medias
  margin-bottom 20px
  margin-right 20px
  display flex
  flex-direction row

.menu-bottom-media-discord
  cursor pointer
  height 32px
  width 32px
  background url(./assets/discord.svg) center center no-repeat
  margin-top 20px
  margin-left 20px

.menu-bottom-media-soundcloud
  cursor pointer
  height 32px
  width 32px
  background url(./assets/soundcloud.svg) center center no-repeat
  margin-top 20px
  margin-left 20px

.menu-bottom-media-github
  cursor pointer
  height 32px
  width 32px
  background url(./assets/github.svg) center center no-repeat
  margin-top 20px
  margin-left 20px

.menu-bottom-media-youtube
  cursor pointer
  height 32px
  width 32px
  background url(./assets/youtube.svg) center center no-repeat
  margin-top 20px
  margin-left 20px

.menu-location
  white-space nowrap
  cursor pointer
  display flex
  font-weight 500
  border-radius 5px
  font-size 24px
  color white
  border 1px solid #9C9C9C
  margin-top 10px
  margin-left 16px
  margin-right 16px
  padding-top 6px
  padding-bottom 6px
  padding-left 19px
  padding-right 19px
  transition all 0.04s ease-out
  &:hover
    background #363636
  &:active
    background #202020

.music-color
  color #9599FF

.games-color
  color #95FF99

.meme-pack-color
  color #FF95F4

.blog-color
  color #00D1FF

.bio-color
  color #DBFF00

.menu-location-selected
  background #363636

iframe
  border none

.body
  width 100%
  height 100%
  position relative
  & > .body-iframe
    position absolute
    width 100%
    height 100%
    border none
    user-select none
    -webkit-user-drag none

.loading-screen
  overflow hidden
  position absolute
  width 100%
  height 100%
  visibility hidden
  display none
  align-items center
  justify-content center
  color white
  font-size 64px

.menu-bottom-text
  display flex