.keyboard
  margin-bottom 20px
  padding 16px 10px 10px 16px
  background #2C2C2C
  display flex
  flex-direction column
  border-radius 12px
  transition all 0.4s ease-in-out
  &.blurred
    filter blur(8px) saturate(0%)
  & > div:nth-child(1)
    margin-bottom 16px
    & > div:nth-child(1)
      margin-right 66px
    & > div:nth-child(5)
      margin-right 37px
    & > div:nth-child(9)
      margin-right 36px
    & > div:nth-child(13)
      margin-right 22px
  & > div:nth-child(2)
    & > div:nth-child(14)
      width 111px
      margin-right 22px
  & > div:nth-child(3)
    & > div:nth-child(1)
      width 81px
    & > div:nth-child(14)
      width 82px
      margin-right 22px
  & > div:nth-child(4)
    & > div:nth-child(1)
      width 96px
    & > div:nth-child(13)
      width 126px
      margin-right 22px
  & > div:nth-child(5)
    & > div:nth-child(1)
      width 125px
    & > div:nth-child(12)
      width 156px
      margin-right 81px
  & > div:nth-child(6)
    & > div:nth-child(1)
      width 66px
    & > div:nth-child(2)
      width 66px
    & > div:nth-child(3)
      width 66px
    & > div:nth-child(4)
      width 364px
    & > div:nth-child(5)
      width 66px
    & > div:nth-child(6)
      width 67px
    & > div:nth-child(7)
      width 67px
    & > div:nth-child(8)
      width 67px
      margin-right 22px
  & > div
    width 100%
    height 52px
    display flex
    flex-direction row
    margin-bottom 6px
    & > div
      box-sizing border-box
      display flex
      align-items center
      justify-content center
      border solid 2px white
      background #333333
      width 52px
      color white
      font-family Roboto
      border-radius 4px
      margin-right 7px
      &.pressed
        background #EFEFEF